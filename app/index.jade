doctype html
html(lang="en", ng-controller="RootCtrl as root")
    head
        include ./_partials/_head
        title(ng-bind="root.title")
        include ./_partials/_styles
    body
        .container-fluid
            .row
                .col-xs-12.col-md-6.col-md-offset-3
                    include ./_partials/_nav

                    .alert-warning.text-xs-center.m-b-1(ng-if="root.adminMessage", ng-cloak)
                        p {{root.adminMessageTime}}
                            br
                            | Admin Message: {{root.adminMessage}}

                    .alert-warning.text-xs-center(ng-if="root.processing", ng-cloak)
                        i.fa.fa-spinner.fa-pulse.fa-spin
                        |Loading...
                    .row
                        .col-xs-12
                            olweg.com - our local world entertainment guide
                    .row
                        .col-xs-12(ui-view='', ng-cloak)

        include ./_partials/_scripts
        script.
            angular.bootstrap(document,['olweg-moguls'],{strictDi:true});
